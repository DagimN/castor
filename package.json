{
  "name": "castor",
  "productName": "castor",
  "version": "1.0.0",
  "description": "Castor is a tool that will be used for managing, organizing and displaying different files to a projector screen that will separate the control panel and the projector screen, so that the projector screen will always have a clean flow.",
  "type": "module",
  "main": "electron/main.js",
  "publish": null,
  "scripts": {
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "react:dev": "vite",
    "electron:dev": "electronmon electron/main.js",
    "start": "concurrently \"yarn react:dev\" \"yarn electron:dev\"",
    "build": "vite build && electron-builder --publish=never",
    "react:build": "vite build"
  },
  "keywords": [
    "Projector",
    "Presentation Management",
    "Castor",
    "Control Panel"
  ],
  "author": {
    "name": "Dagmawi Nebiat",
    "email": "dagmnebiat@gmail.com"
  },
  "build": {
    "appId": "com.castor.app",
    "win": {
      "icon": "public/logo.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "public/logo.icns"
    },
    "linux": {
      "icon": "public/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/*.js",
      "package.json"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron-forge/plugin-webpack": "^7.8.3",
    "@electron/fuses": "^1.0.0",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vercel/webpack-asset-relocator-loader": "1.7.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "css-loader": "^6.0.0",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3",
    "eslint": "^8.0.1",
    "eslint-plugin-import": "^2.25.0",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "node-loader": "^2.0.0",
    "postcss": "^8.5.6",
    "style-loader": "^3.0.0",
    "tailwindcss": "^4.1.12",
    "ts-loader": "^9.2.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "electron-squirrel-startup": "^1.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.8.2",
    "ts-exif-parser": "^0.2.2",
    "zustand": "^5.0.8"
  }
}
